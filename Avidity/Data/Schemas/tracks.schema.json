{
  "$schema": "http://json-schema.org/draft-07/schema#",

  "type": "object",
  "additionalProperties": false,

  "properties": {
    "$schema": { "type": "string" }
  },

  "patternProperties":
  {
    "[a-z0-9]+": {
      "type": "object",
      "required": ["name", "artist", "file"],
      "additionalProperties": false,
      "properties": {
        "name": { "type": "string" },
        "artist": {
          "type": ["string", "array"],
          "items": { "type": "string" }
        },
        "album": {
          "type": "string",
          "pattern": "[a-z0-9]+"
        },
        "lists": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "[a-z0-9]+"
          }
        },
        "file": { "type": "string" },
        "cover": { "type": "string" },
        "plays": { "type": "integer", "default": 0 }
      }
    }
  }
}
